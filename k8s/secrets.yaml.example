apiVersion: v1
kind: Secret
metadata:
  name: analytics-secrets
  namespace: analytics
type: Opaque
stringData:
  # Database connection string
  # Format: postgresql://username:password@host:port/database
  database-url: "postgresql://analytics_user:CHANGE_ME@analytics-postgres:5432/analytics"

  # JWT Secret for authentication
  # Generate with: openssl rand -hex 32
  jwt-secret: "CHANGE_ME_GENERATE_RANDOM_SECRET"

  # Shared JWT secret with main app
  shared-jwt-secret: "CHANGE_ME_SHARED_SECRET"

  # SendGrid API Key
  sendgrid-api-key: "CHANGE_ME_SENDGRID_KEY"

  # Sentry DSN for error tracking
  sentry-dsn: "https://your-sentry-dsn-here"

  # New Relic License Key
  new-relic-license-key: "CHANGE_ME_NEW_RELIC_KEY"
