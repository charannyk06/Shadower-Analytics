# Application
APP_ENV=development
API_VERSION=v1

# Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shadower_analytics

# Redis
# For development: Use default password
# For production: Change to strong password (generate with: openssl rand -base64 32)
REDIS_URL=redis://:shadower_redis_dev_password_change_in_production@localhost:6379/0
REDIS_PASSWORD=shadower_redis_dev_password_change_in_production

# Celery
CELERY_BROKER_URL=redis://:shadower_redis_dev_password_change_in_production@localhost:6379/1
CELERY_RESULT_BACKEND=redis://:shadower_redis_dev_password_change_in_production@localhost:6379/2

# Security & Authentication
# IMPORTANT: Change this to a strong secret key in production (256-bit minimum)
JWT_SECRET_KEY=your-secret-key-change-in-production-use-a-strong-256-bit-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Optional: For RS256 (asymmetric encryption)
# JWT_PUBLIC_KEY=
# JWT_PRIVATE_KEY=

# Supabase (if using Supabase Auth)
# SUPABASE_JWT_SECRET=
# SUPABASE_URL=
# SUPABASE_ANON_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Main App Integration
MAIN_APP_URL=http://localhost:3001

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_REALTIME=true
ENABLE_ALERTS=true
ENABLE_EXPORTS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Aggregation
HOURLY_ROLLUP_ENABLED=true
DAILY_ROLLUP_ENABLED=true
WEEKLY_ROLLUP_ENABLED=true
MONTHLY_ROLLUP_ENABLED=true
