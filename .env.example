# Application
NODE_ENV=development
APP_ENV=development
ENVIRONMENT=development

# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shadower_analytics
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shadower_analytics
DB_USER=postgres
DB_PASSWORD=postgres
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Flower (Celery Monitoring)
# SECURITY WARNING: Change this in production!
# Format: username:password
FLOWER_BASIC_AUTH=admin:change-this-secure-password

# Authentication & JWT
# SECURITY WARNING: Change JWT_SECRET_KEY in production!
# Generate a strong secret: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_EXPIRATION_HOURS=24

# Main App Integration
MAIN_APP_API_URL=https://api.shadower.ai
SHARED_JWT_SECRET=shared-secret-between-services

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-key
FROM_EMAIL=analytics@shadower.ai
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587

# Monitoring & Observability
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=your-new-relic-key
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_REALTIME_UPDATES=true
ENABLE_EXPORT_FEATURE=true
ENABLE_REALTIME=true
ENABLE_ALERTS=true
ENABLE_EXPORTS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Aggregation Jobs
HOURLY_ROLLUP_ENABLED=true
DAILY_ROLLUP_ENABLED=true
WEEKLY_ROLLUP_ENABLED=true
MONTHLY_ROLLUP_ENABLED=true

# Cloud Storage (for exports)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=shadower-analytics-exports
AWS_REGION=us-west-2
