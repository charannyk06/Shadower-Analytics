# Application
NODE_ENV=development
APP_ENV=development

# Backend API
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
API_VERSION=v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shadower_analytics
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shadower_analytics
DB_USER=postgres
DB_PASSWORD=postgres
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Authentication
# SECURITY WARNING: Change JWT_SECRET_KEY in production!
# Generate a strong secret: openssl rand -hex 32
# This default value will be rejected in production environments
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring
SENTRY_DSN=
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_REALTIME=true
ENABLE_ALERTS=true
ENABLE_EXPORTS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Aggregation Jobs
HOURLY_ROLLUP_ENABLED=true
DAILY_ROLLUP_ENABLED=true
WEEKLY_ROLLUP_ENABLED=true
MONTHLY_ROLLUP_ENABLED=true
